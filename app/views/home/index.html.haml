.container-home
  .row
    - @articles.each do |article|
      .col.s12.m4
        .card.large
          .card-image.waves-effect.waves-block.waves-light
            -# %img{:src => "images/sample-1.jpg"}/
            = image_tag article.url_to_image || 'https://picsum.photos/200/?random&blur', class: 'activator'
          .card-content
            -# - if article.recent?
              
            %span.card-title.activator.grey-text.text-darken-4
              = article.title
              %i.material-icons.right more_vert
            %p
              = link_to 'Source', article.url
              
          .card-reveal
            %span.card-title.activator.grey-text.text-darken-4
              = article.title
              %i.material-icons.right close
              %p= article.description || 'No content'
              %p= article.content
